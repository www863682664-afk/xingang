/**app.wxss**/
page {
  background-color: #f6f6f6;
  min-height: 100vh;
}

.container {
  padding: 20rpx;
  font-size: 28rpx;
  background-color: #f6f6f6; /* Ensure container has color */
}

.input-group {
  margin-bottom: 20rpx;
}

.label {
  display: block;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.input {
  border: 1px solid #ccc;
  padding: 15rpx;
  border-radius: 5rpx;
  width: 100%;
  box-sizing: border-box;
  min-height: 60rpx;
}

.btn {
  background-color: #07c160;
  color: white;
  padding: 20rpx;
  text-align: center;
  border-radius: 10rpx;
  margin-top: 20rpx;
}

/* Optimized Table Styles */
.table {
  border: 1px solid #ccc;
  width: 100%;
  margin-top: 20rpx;
  font-size: 24rpx;
}

.tr {
  display: flex;
  width: 100%;
  justify-content: flex-start;
  align-items: stretch;
  border-bottom: 1px solid #eee;
}

.th {
  background-color: #f0f0f0;
  font-weight: bold;
  padding: 10rpx 5rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
}

.td {
  padding: 5rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-right: 1px solid #eee;
}
.td:last-child {
  border-right: none;
}

.td input {
  width: 100%;
  height: 100%;
  border: none;
  text-align: center;
  font-size: 24rpx;
  min-height: 50rpx; /* Ensure click area */
}

/* Specific Column Widths (Flex Basis) */
.col-name { flex: 2.2; }    /* 项目 (Reduced from 3) */
.col-qty { flex: 1; }     /* 数量 */
.col-unit { flex: 1.8; }    /* 单位 (Increased from 1) */
.col-price { flex: 1.2; } /* 单价 */
.col-labor { flex: 1.2; } /* 手工费 */
.col-spec { flex: 1.5; }  /* 规格 */
.col-action { flex: 0.8; color: red; font-weight: bold;} /* 操作 */
