/* Consistent with other modules */
.container {
  padding: 20rpx;
  background-color: #f6f6f6;
  min-height: 100vh;
}

.header {
  margin-bottom: 40rpx;
  text-align: center;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 24rpx;
  color: #666;
}

.form-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
  margin-bottom: 30rpx;
}

.form-group {
  margin-bottom: 30rpx;
}

.label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.label-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.checkbox-container {
  display: flex;
  align-items: center;
}

.checkbox-label {
  font-size: 26rpx;
  color: #666;
  margin-left: 10rpx;
}

.input {
  border: 1px solid #eee;
  border-radius: 8rpx;
  padding: 0 24rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 28rpx;
  width: 100%;
  box-sizing: border-box;
}

.input[disabled] {
  background-color: #f5f5f5;
  color: #999;
}

.textarea {
  border: 1px solid #eee;
  border-radius: 8rpx;
  padding: 24rpx;
  font-size: 28rpx;
  width: 100%;
  box-sizing: border-box;
  min-height: 200rpx;
  line-height: 1.5;
}

.picker-view {
  border: 1px solid #eee;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
  background: #fff;
}

.submit-btn {
  background: #007aff;
  color: #fff;
  margin-top: 40rpx;
  font-weight: 500;
}

.submit-btn:active {
  opacity: 0.9;
}

.preview-area {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-top: 30rpx;
  text-align: center;
}

.success-tip {
  color: #07c160;
  font-size: 30rpx;
  font-weight: 500;
  margin-bottom: 30rpx;
}

.action-buttons {
  display: flex;
  gap: 20rpx;
  justify-content: center;
}

.action-btn {
  font-size: 28rpx;
  padding: 0 40rpx;
  line-height: 80rpx;
  background: #f6f6f6;
  color: #333;
}

.action-btn.primary {
  background: #007aff;
  color: #fff;
}
